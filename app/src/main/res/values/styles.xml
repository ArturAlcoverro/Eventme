<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.Eventme.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Style.Eventme.TextInput" parent="">
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="Style.Eventme.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="color">@color/font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Style.Eventme.Chip" parent="">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">20dp</item>
        <item name="chipEndPadding">20dp</item>
        <item name="chipBackgroundColor">@color/home_chip_selector</item>
        <item name="android:checkable">true</item>
        <item name="checkedIcon">@null</item>
        <item name="android:textColor">@color/font_color</item>
    </style>

    <style name="Style.Eventme.IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>